{
    "name": "mesaj",
    "version": "0.1.0",
    "description": "A simple command-line wrapper over Apple's Message app",
    "keywords": [
        "cli",
        "tools",
        "wrapper",
        "apple",
        "macos",
        "messages"
    ],
    "homepage": "https://github.com/leny/mesaj#readme",
    "bugs": {
        "url": "https://github.com/leny/mesaj/issues"
    },
    "author": {
        "name": "leny",
        "url": "https://leny.me",
        "email": "info@flatland.be"
    },
    "bin": {
        "mesaj": "./bin/index.js"
    },
    "files": [
        "bin"
    ],
    "scripts": {
        "work": "npx babel src --watch --verbose --out-dir bin",
        "build": "npx babel src --out-dir bin",
        "prepare": "npx babel src --out-dir bin",
        "lint": "npx eslint --fix --cache src",
        "preinstall": "node ./bin/pre-install.js"
    },
    "lint-staged": {
        "*.js": [
            "npx eslint --fix --cache",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx lint-staged"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/leny/mesaj.git"
    },
    "license": "MIT",
    "dependencies": {
        "chalk": "^2.4.1",
        "commander": "^2.19.0",
        "fuzzy": "^0.1.3",
        "inquirer": "^6.2.1",
        "inquirer-autocomplete-prompt": "^1.0.1",
        "ora": "^3.0.0",
        "run-jxa": "^1.2.0",
        "user-home": "^2.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.1.5",
        "@babel/core": "^7.1.6",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
        "@babel/preset-env": "^7.1.6",
        "babel-eslint": "^10.0.1",
        "eslint": "^5.9.0",
        "eslint-plugin-prettier": "^3.0.0",
        "husky": "^1.1.4",
        "lint-staged": "^8.0.4",
        "prettier": "^1.15.2"
    }
}
